@page "/"
@model Proiect_final.Pages.Songs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Song[0].Single)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song[0].Album)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song[0].AlbumPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song[0].RecordLabel.RecordLabelName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Song) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Single)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Album)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecordLabel.RecordLabelName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
